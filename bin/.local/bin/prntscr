#!/bin/bash
if [[ ! -d ~/Pictures/Screenshots ]]; then
    mkdir -p ~/Pictures/Screenshots
fi
if [ $# -eq 0 ]; then
    filename="$HOME/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png"
    maim $filename
    xclip -selection clipboard -t image/png "$filename"
else
    if [ "$1" == "-s" ]; then
        filename="$HOME/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png"
        maim -s $filename
        xclip -selection clipboard -t image/png "$filename"
    else
        echo "Error, unexpected argument: $*"
        exit 1
    fi
fi
