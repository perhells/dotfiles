set $mod Mod4
set $alt Mod1

# Font for window titles.
font pango:Office Code Pro Medium 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Lock screen
bindsym Ctrl+$alt+l exec --no-startup-id lockscreen.sh

# Shutdown
bindsym $mod+Ctrl+q exec --no-startup-id shutdown now

# Reboot
bindsym $mod+Ctrl+r exec --no-startup-id reboot

# start a terminal
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal
bindsym $mod+Shift+Return exec --no-startup-id newworkspace i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill
bindsym $alt+F4 kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run -i -fn "Office Code Pro Medium-12"
bindsym $mod+space exec --no-startup-id dmenu_run -i -fn "Office Code Pro Medium-12"
# start i3-dmenu-desktop which only displays applications with .desktop files
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop --dmenu='dmenu -i -fn "Office Code Pro Medium-12"'
#bindsym Ctrl+space exec --no-startup-id i3-dmenu-desktop --dmenu='dmenu -fn "Office Code Pro Medium-12"'

# start nemo
bindsym $mod+e exec --no-startup-id nemo

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+Ctrl+h split h

# split in vertical orientation
bindsym $mod+Ctrl+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+s layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

bindsym $mod+Tab workspace next
bindsym $alt+Tab workspace next
bindsym $mod+Shift+Tab workspace prev
bindsym $alt+Shift+Tab workspace prev

# Get new workspace
bindsym $mod+n exec --no-startup-id newworkspace

# Jump to first/last workspace
bindsym $mod+Home workspace number 1
bindsym $mod+End exec --no-startup-id last_workspace.sh

bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Right move workspace to output right
bindsym $mod+Ctrl+Up move workspace to output up
bindsym $mod+Ctrl+Down move workspace to output down

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
